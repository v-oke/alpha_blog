<h1 align="center">All Alpha Bloggers</h1>

<div class="d-flex justify-content-center mt-4">
<%= paginate @users %>
</div>

<div class="container mt-4">
  <div class="row justify-content-center">
    <% @users.each do |user| %>
      <div class="col-md-8 mb-4">
        <div class="card shadow-sm rounded">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to gravatar_for(user), user_path(user) %>
            </h5>
            <p class="card-text">
              <%= link_to user.username, user_path(user) %>
            </p>
            <p class="text-muted mb-2">
              <small>
                <%= user.articles.present? ? pluralize(user.articles.count, "artilce") : "No Articles" %>
              </small>
            </p>
            <% if logged_in? && current_user == user %>
              <div class="d-flex justify-content-end">
                <%= link_to "Edit", edit_user_path(user), class: "btn btn-sm btn-outline-warning me-2" %>
                <%= link_to "Delete", articles_path,
                      data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                      class: "btn btn-sm btn-outline-danger" %>
              </div>
            <% end %>  
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="d-flex justify-content-center mt-4">
<%= paginate @users %>
</div>