<div class="container mt-5 mb-10">
  <!-- Title Outside the Card -->
  <h2 class="text-center fw-bold mb-4"><%= @article.title %></h2>

  <div class="card shadow rounded">
    <!-- Card Header -->
    <div class="card-header bg-primary text-white">
      <h4 class="mb-0">Description</h4>
    </div>

    <!-- Card Body -->
    <div class="card-body">
      <p class="card-text"><%= @article.description %></p>
    </div>

    <!-- Card Footer with Buttons on Lower-Left -->
    <div class="card-footer d-flex justify-content-start gap-2">
      <%= link_to "Edit", edit_article_path(@article), class: "btn btn-sm btn-outline-warning" %>
      <%= link_to "Delete", article_path(@article),
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                    class: "btn btn-sm btn-outline-danger" %>
      <%= link_to "Back to Articles", articles_path, class: "btn btn-sm btn-outline-secondary" %>
    </div>
  </div>
</div>