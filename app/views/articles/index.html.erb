<h1 align="center">Listing All Articles</h1>

<div class="container mt-4">
  <div class="row justify-content-center">
    <% @articles.each do |article| %>
      <div class="col-md-8 mb-4">
        <div class="card shadow-sm rounded">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to article.title, article_path(article), class: "text-decoration-none text-primary" %>
            </h5>
            <p class="card-text">
              <%= truncate(article.description, length: 100) %>
            </p>
            <p class="text-muted mb-2">
              <small>By 
                <%= article.user.present? ? article.user.username : "Unknown" %>, <%= time_ago_in_words(article.created_at) %> ago
              </small>
            </p>
            <div class="d-flex justify-content-end">
              <%= link_to "Edit", edit_article_path(article), class: "btn btn-sm btn-outline-warning me-2" %>
              <%= link_to "Delete", article_path(article),
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                    class: "btn btn-sm btn-outline-danger" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>