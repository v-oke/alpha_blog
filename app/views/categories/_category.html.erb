<div class="container mt-4">
  <div class="row justify-content-center">
    <% obj.each do |category| %>
      <div class="col-md-8 mb-4">
        <div class="card shadow-sm rounded">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to category.name, category_path(category), class: "text-decoration-none text-primary" %>
            </h5>
            <p class="card-text">
              <%= truncate(category.name, length: 100) %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>